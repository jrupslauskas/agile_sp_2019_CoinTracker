<div class="jumbotron text-center shadow-lg">
    <h1>Welcome To Coin Tracker</h1>

    <h2>@ViewBag.Message</h2>

    <p>
        Let's get you started
    </p>
</div><!--End jumbotron class-->
<!-- This is the form that is visible on load-->

<div class="container">
    <form method="post" action="/Home/LogIn" class="mt-5">
        <div class="input-group mb-5 shadow">
            <div class="input-group-prepend">
                <span class="input-group-text" for="username">Username:</span>
            </div>
            <input class="form-control" type="text" name="username" id="username" required="required">
        </div>
        <div class="input-group mb-5 shadow">
            <div class="input-group-prepend">
                <span class="input-group-text" for="pwd">Password:</span>
            </div>
            <input class="form-control" type="password" name="pwd" id="pwd" required="required">
        </div>
        <div class=" d-flex flex-row-reverse mt-3">

            <div><input class="btn btn-secondary shadow" type="submit" value="Log In"></div>
            <div><button type="button" class="btn btn-secondary shadow mr-5" data-toggle="modal" data-target="#createAccountModal">Create Account</button></div>
        </div>
    </form>




    <!-- This is the Create account popup it is hidden until the button is clicked -->
    <div class="modal" id="createAccountModal">
        <div class="modal-dialog">
            <div class="modal-content pr-3 pl-3">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create Account</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form method="post" action="/Home/CreateAccount">
                        <div class="input-group mb-4 shadow">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Name:</span>
                            </div>
                            <input type="text" class="form-control" name="fName" placeholder="First">
                            <input type="text" class="form-control" name="lName" placeholder="Last">
                        </div>
                        <div class="input-group mb-4 shadow">
                            <div class="input-group-prepend">
                                <span class="input-group-text" for="username">Email:</span>
                            </div>
                            <input class="form-control" type="email" name="email" id="email" required="required">
                        </div>
                        <div class="input-group mb-4 shadow">
                            <div class="input-group-prepend">
                                <span class="input-group-text" for="username">Username:</span>
                            </div>
                            <input class="form-control" type="text" name="username" id="username" required="required">
                        </div>

                        <div class="input-group mb-4 shadow">
                            <div class="input-group-prepend">
                                <span class="input-group-text" for="password">Create Password:</span>
                            </div>
                            <input class="form-control" type="password" name="pwd" id="pwd" required="required">
                        </div>

                        <div class="input-group mb-4 shadow">
                            <div class="input-group-prepend">
                                <span class="input-group-text" for="confirmPwd">Confirm Password:</span>
                            </div>
                            <input class="form-control" type="password" name="confirmPwd" id="confirmPwd" required="required">
                        </div>

                        <div class="float-right mt-5 mb-5">
                            <input class="btn btn-secondary shadow" type="submit" value="CreateAccount">
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div><!-- End #createAccountModal-->
</div>




